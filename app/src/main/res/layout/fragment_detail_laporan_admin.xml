<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginEnd="64dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gradient_blue"
                android:padding="20dp"
                android:gravity="bottom"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/tvKodeLaporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LP-2024-001"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTanggalLaporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dilaporkan pada 27 November 2024"
                    android:textColor="#E3F2FD"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/layoutBadges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menunggu"
                        android:textSize="12sp"
                        app:chipBackgroundColor="#FFFFFF"
                        android:textColor="#FF9800"
                        app:chipStrokeWidth="0dp"
                        style="@style/Widget.Material3.Chip.Assist" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Action Buttons -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aksi Admin"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnApprove"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="âœ… Setujui"
                            android:textColor="#FFFFFF"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="8dp"
                            android:layout_marginEnd="6dp"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="âŒ Tolak"
                            android:textColor="#FFFFFF"
                            app:backgroundTint="#F44336"
                            app:cornerRadius="8dp"
                            android:layout_marginStart="6dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Informasi Barang -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nama Barang -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_inventory"
                            android:tint="#2196F3"
                            tools:ignore="UseAppTint" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Barang"
                                android:textSize="12sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/tvNamaBarang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Komputer Lab 1"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Kategori -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_category"
                            android:tint="#2196F3"
                            tools:ignore="UseAppTint" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kategori"
                                android:textSize="12sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/tvKategori"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Komputer dan Laptop"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Lokasi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            android:tint="#2196F3"
                            tools:ignore="UseAppTint" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lokasi"
                                android:textSize="12sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/tvLokasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fakultas Teknik - Gedung A - R.101"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Detail Kerusakan -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Tingkat Kerusakan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_warning"
                            android:tint="#FF9800"
                            tools:ignore="UseAppTint" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tingkat Kerusakan"
                                android:textSize="12sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/tvTingkatKerusakan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sedang"
                                android:textSize="14sp"
                                android:textColor="#FF9800"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Tanggal Kejadian -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="#2196F3"
                            tools:ignore="UseAppTint" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Kejadian"
                                android:textSize="12sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/tvTanggalKejadian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 November 2024"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Deskripsi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Kerusakan"
                            android:textSize="12sp"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvDeskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monitor tidak menyala dan CPU berbunyi beep berulang kali. Sudah dicoba restart namun masalah masih berlanjut."
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Foto Kerusakan -->
            <LinearLayout
                android:id="@+id/layoutFotoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/cardKerusakan"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Kerusakan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/layoutFotoKerusakan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvFoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"/>

                        </LinearLayout>

                    </HorizontalScrollView>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Timeline -->
            <TextView
                android:id="@+id/tvSectionTimeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/layoutFotoSection"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/tvSectionTimeline"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_timeline"
                    tools:itemCount="3" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Informasi Pelapor -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Informasi Pelapor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_rounded_light"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAvatarPelapor"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="Ikky"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/bg_avatar_circle"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvNamaPelapor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ikky"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/tvEmailPelapor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ikky@user.com"
                                android:textSize="13sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvPhonePelapor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="082121929128"
                                android:textSize="13sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>