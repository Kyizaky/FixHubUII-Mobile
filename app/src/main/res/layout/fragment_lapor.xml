<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Cad -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#2196F3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_report"
                    android:tint="#FFFFFF"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Form Pelaporan"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporkan kerusakan barang"
                        android:textColor="#E3F2FD"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardHeader"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nama Barang -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Barang"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNamaBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Masukkan nama barang"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNamaBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Kategori Barang -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori Barang"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilKategori"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Pilih kategori"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/actvKategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tipe Lokasi Switch -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Lokasi"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_switch_container"
                    android:layout_marginTop="8dp"
                    android:padding="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIndoor"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Indoor"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOutdoor"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Outdoor"
                        android:textColor="#666666"
                        app:backgroundTint="#F5F5F5"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

                <!-- Indoor Fields Container -->
                <LinearLayout
                    android:id="@+id/layoutIndoor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Fakultas -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fakultas"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFakultas"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Pilih fakultas"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/actvFakultas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Gedung -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gedung"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilGedung"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Pilih gedung"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/actvGedung"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Ruangan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ruangan"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilRuangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Masukkan ruangan (contoh: R.101)"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRuangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Outdoor Fields Container -->
                <LinearLayout
                    android:id="@+id/layoutOutdoor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Lokasi Outdoor -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Barang"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLokasiOutdoor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Masukkan lokasi barang"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:helperText="Contoh: Parkiran Gedung A, Lapangan Basket, dll">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLokasiOutdoor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:maxLines="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Tingkat Kerusakan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tingkat Kerusakan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp" />

                <RadioGroup
                    android:id="@+id/rgTingkatKerusakan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbRingan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ringan - Masih dapat digunakan"
                        android:textSize="14sp"
                        android:paddingVertical="8dp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbSedang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedang - Perlu perbaikan segera"
                        android:textSize="14sp"
                        android:paddingVertical="8dp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbBerat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Berat - Tidak dapat digunakan"
                        android:textSize="14sp"
                        android:paddingVertical="8dp" />

                </RadioGroup>

                <!-- Deskripsi Kerusakan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Kerusakan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Jelaskan kerusakan secara detail"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:maxLines="6"
                        android:gravity="top|start"
                        android:maxLength="500" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tanggal Kejadian -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Kejadian"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Pilih tanggal kejadian"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="#2196F3"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Upload Foto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Kerusakan (Opsional)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maksimal 3 foto"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp" />

                <!-- Image Preview Container -->
                <LinearLayout
                    android:id="@+id/layoutImagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/layoutImages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Image items will be added programmatically -->

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUploadFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Foto"
                    android:textColor="#2196F3"
                    android:layout_marginTop="12dp"
                    app:strokeColor="#2196F3"
                    app:strokeWidth="1dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/cardForm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Batal"
                android:textColor="#666666"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKirim"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Kirim Laporan"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                app:backgroundTint="#2196F3"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>