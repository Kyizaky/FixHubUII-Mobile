<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <!-- Timeline Dot -->
    <View
        android:id="@+id/viewDot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_timeline_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvStatus" />

    <!-- Timeline Lne -->
    <View
        android:id="@+id/viewLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/viewDot"
        app:layout_constraintEnd_toEndOf="@id/viewDot"
        app:layout_constraintTop_toBottomOf="@id/viewDot"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/viewDot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Diterima"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Tanggal & Waktu -->
        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 November 2024, 10:30 WIB"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp" />

        <!-- Keterangan (Optional) -->
        <TextView
            android:id="@+id/tvKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporan telah diterima dan menunggu verifikasi dari admin"
            android:textSize="13sp"
            android:textColor="#666666"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Penanggung Jawab (Optional) -->
        <LinearLayout
            android:id="@+id/layoutPenanggungJawab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/bg_avatar_small"
                android:padding="4dp"
                android:tint="#666666"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvPenanggungJawab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin System"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="6dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>